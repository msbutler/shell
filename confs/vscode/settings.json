// Place your settings in this file to overwrite the default settings
{
  "editor.disableTranslate3d": true,
  "editor.rulers": [
    80,
    100
  ],
  "vim.vimrc.enable": true,
  "vim.cursorStylePerMode.normal": "block",
  "vim.cursorStylePerMode.replace": "block",
  "vim.cursorStylePerMode.visual": "block",
	"editor.cursorBlinking": "solid",
	"gitlens.currentLine.enabled": false,
	"gitlens.hovers.currentLine.over": "line",
	"gitlens.hovers.enabled": false,
	"files.autoSave": "afterDelay",
	"editor.quickSuggestions": {
	//		"other": false,
			"comments": false,
			"strings": false
	},
  "editor.detectIndentation": true,
  "editor.tabSize": 2,
  "files.exclude": {
    "**/*~": true,
    "bazel-*/": true,
    "build/builder_home/**": true,
    "pkg/mod/**": true
  },
  //"workbench.editor.enablePreview": false,
  "cSpell.userWords": [
    "backupccl",
    "bytea",
    "callsite",
    "callsites",
    "cockroachdb",
    "crdb",
    "deps",
    "descs",
    "distsqlpb",
    "Errorf",
    "Eventf",
    "Failedf",
    "Failf",
    "grpc",
    "humanizeutil",
    "importccl",
    "Infof",
    "intervalccl",
    "jobspb",
    "LDFLAGS",
    "leveldb",
    "loggable",
    "MVCC",
    "mysqldump",
    "mysqlout",
    "MYSQLOUTFILE",
    "Newf",
    "nocgo",
    "nullif",
    "pgcopy",
    "PGDUMP",
    "pgerror",
    "pkey",
    "Postgres",
    "randutil",
    "roachpb",
    "rocksdb",
    "sampledataccl",
    "serverpb",
    "Sprintf",
    "sst",
    "sstable",
    "ssts",
    "Stmts",
    "storageccl",
    "struct",
    "testutils",
    "unencrypted",
    "Unimplementedf",
    "Vals",
    "Warningf",
    "Wrapf"
  ],
  // Ensures the right branch appears in the vscode editor.
  "git.autorefresh": true,
  "files.eol": "\n",
  "files.watcherExclude": {
    "vendor/**": true
  },
  "search.exclude": {
    "c-deps/**": true,
    "pkg/ui/yarn**": true,
    "vendor/**": true,
    "pkg/mod/**": true
  },
  "go.useLanguageServer": true,
  "gopls": {
    // If true, enable additional analyses with staticcheck.
    // Warning: This will significantly increase memory usage.
		"ui.semanticTokens": true
  },
  "go.formatTool": "goimports",
  "editor.largeFileOptimizations": false,
  "json.maxItemsComputed": 50000,
  "terminal.integrated.scrollback": 100000,
  "diffEditor.renderSideBySide": false,
  //"extensions.ignoreRecommendations": true,
  "githubPullRequests.remotes": [
    "upstream"
  ],
  "workbench.startupEditor": "none",
  "go.toolsManagement.autoUpdate": true,
  "bazel.queriesShareServer": true,
  "[go]": {
  
    "editor.inlineSuggest.enabled": true,
    "editor.insertSpaces": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "workbench.editor.editorActionsLocation": "hidden",
  "python.defaultInterpreterPath": "/Users/butler/.venv",
  
  // Might want to delete. Keep experimenting with merge in vscode
  "diffEditor.codeLens": true,

  // To speed up vim in vscode
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "editor.hover.enabled": false,
  "gitlens.hovers.avatars": false,
  "editor.hover.delay": 0,
